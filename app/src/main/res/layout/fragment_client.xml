<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_app_bar"/>

    <androidx.core.widget.NestedScrollView
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingHorizontal="30dp"
            android:paddingVertical="18dp">


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:outlineSpotShadowColor="@color/some_color"
                app:cardElevation="10dp"
                tools:targetApi="p">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingVertical="20dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/client_image"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        app:shapeAppearance="@style/Logo"
                        tools:srcCompat="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/client_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:textAppearance="@style/Item.Primary"
                        android:textSize="18sp"
                        tools:text="Client's Name" />

                    <TextView
                        android:id="@+id/client_membership_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textAppearance="@style/Item.Secondary"
                        android:textSize="16sp"
                        tools:text="Member Number: 03030303" />

                    <TextView
                        android:id="@+id/client_mobile_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:autoLink="phone"
                        android:gravity="center"
                        android:textAppearance="@style/Item.Secondary"
                        android:textColorLink="#0277BD"
                        android:textSize="16sp"
                        tools:ignore="TouchTargetSizeCheck"
                        tools:text="+254715417011" />

                    <!--
                    #4E8FAC -> Whatsapp
                    #00838F -> correction
                    #96C5EE -> Telegram
                    -->

                    <TextView
                        android:id="@+id/client_office"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textAppearance="@style/Item.Secondary"
                        android:textSize="16sp"
                        tools:text="St. Teresa Eastleigh SHG" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:outlineSpotShadowColor="@color/some_color"
                app:cardElevation="10dp"
                tools:targetApi="p">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/purple"
                        android:paddingHorizontal="30dp"
                        android:paddingVertical="8dp"
                        android:textAppearance="@style/MshirikaApp.Title"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        tools:text="Savings Accounts" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/savings_accounts"
                        tools:listitem="@layout/item_account"
                        android:paddingHorizontal="20dp"
                        tools:itemCount="3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                    <TextView
                        android:layout_width="match_parent"
                        tools:text="Loan Accounts"
                        android:background="#fdf0f7"
                        android:paddingHorizontal="30dp"
                        android:paddingVertical="8dp"
                        android:textAppearance="@style/MshirikaApp.Title"
                        android:textColor="#d80677"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/loan_Accounts"
                        tools:listitem="@layout/item_account"
                        android:paddingHorizontal="20dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>