<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center"
            app:menu="@menu/home"
            app:title="Home"
            app:titleCentered="true"
            app:titleTextAppearance="@style/TextAppearance.Toolbar.Title" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_scrollFlags="noScroll"
            app:tabMode="fixed"
            tools:visibility="visible">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/client_tab"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/clients" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/group_tab"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/groups" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/center_tab"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/centers" />
        </com.google.android.material.tabs.TabLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="10dp">

            <include
                android:id="@+id/layout_logo"
                layout="@layout/layout_logo"
                android:layout_width="@dimen/logo_size"
                android:layout_height="@dimen/logo_size"
                android:layout_marginTop="30dp"
                android:elevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/search_card"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="30dp"
                android:padding="2dp"
                app:cardCornerRadius="58dp"
                app:cardElevation="3dp"
                app:layout_constraintTop_toBottomOf="@id/layout_logo">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/search_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    app:iconifiedByDefault="false"
                    app:queryBackground="@color/query_background"
                    app:queryHint="Search..." />
            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/client_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/search_card"
                tools:listitem="@layout/item_client" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="10dp"
        android:contentDescription="@string/add_fab_desc"
        android:src="@drawable/ic_round_add_24" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>