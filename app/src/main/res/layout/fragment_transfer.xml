<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <!--<variable
            name="fragment"
            type="co.ke.mshirika.mshirika_app.ui.fragments.TransferFragment" />-->
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Transfer"
                app:titleCentered="true"
                app:titleTextAppearance="@style/TextAppearance.Toolbar.Title" />
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="14dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/bal_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="20dp"
                        android:weightSum="100">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="41.5"
                            android:maxLines="1"
                            android:text="@string/available_balance"
                            android:textAppearance="@style/Item.Secondary"
                            android:textColor="@color/beautiful_text"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/available_balance"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="58.5"
                            android:gravity="end"
                            android:textAppearance="@style/Item.Primary"
                            android:textColor="#2CA409"
                            android:textSize="20sp"
                            tools:text="$23,450" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="10dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="20dp">

                        <TextView
                            android:id="@+id/transfer_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="20dp"
                            android:paddingVertical="8dp"
                            android:textAppearance="@style/TextAppearance.Toolbar.Title"
                            android:textColor="@color/beautiful_text"
                            android:textSize="19sp"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="Transfer Details" />

                        <View
                            android:id="@+id/divider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:alpha=".3"
                            android:background="@color/some_color"
                            app:layout_constraintTop_toBottomOf="@id/transfer_details" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/office_lo"
                            style="@style/Widget.Mshirika.TextInputLayout.FilledBox.DropDown">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/office"
                                style="@style/Widget.Mshirika.TextInputEditText.SingleLine"
                                android:hint="@string/office" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/client_lo"
                            style="@style/Widget.Mshirika.TextInputLayout.FilledBox.DropDown">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/client"
                                style="@style/Widget.Mshirika.TextInputEditText.SingleLine"
                                android:hint="@string/client" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/account_type_lo"
                            style="@style/Widget.Mshirika.TextInputLayout.FilledBox.DropDown">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/account_type"
                                style="@style/Widget.Mshirika.TextInputEditText.SingleLine"
                                android:hint="@string/account_type" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/account_lo"
                            style="@style/Widget.Mshirika.TextInputLayout.FilledBox.DropDown">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/account"
                                style="@style/Widget.Mshirika.TextInputEditText.SingleLine"
                                android:hint="@string/account" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/amount_lo"
                            style="@style/Widget.Mshirika.TextInputLayout.FilledBox"
                            tools:prefixText="Ksh">

                            <!--todo add the prefix dynamically-->

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/amount"
                                style="@style/Widget.Mshirika.TextInputEditText.SingleLine"
                                android:hint="@string/amount_required"
                                android:inputType="phone|numberDecimal"
                                tools:text="1,000" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/date_lo"
                            style="@style/Widget.Mshirika.TextInputLayout.FilledBox"
                            android:layout_width="0dp"
                            android:layout_weight="9.3"
                            android:paddingStart="20dp"
                            android:paddingEnd="5dp"
                            app:layout_constraintWidth_percent=".82">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/date"
                                style="@style/Widget.Mshirika.TextInputEditText"
                                android:hint="@string/date" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageButton
                            android:id="@+id/date_picker"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@color/transparent"
                            android:contentDescription="@string/date_picker_desc"
                            app:srcCompat="@drawable/ic_baseline_calendar_month_24" />
<!--                            android:onClick="@{(view) -> fragment.openCalendarPicker()}"-->

                        <androidx.constraintlayout.helper.widget.Flow
                            android:id="@+id/date_flow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="20dp"
                            app:constraint_referenced_ids="date_lo,date_picker"
                            tools:ignore="RtlSymmetry" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/description_lo"
                            style="@style/Widget.Mshirika.TextInputLayout.FilledBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/description"
                                style="@style/Widget.Mshirika.TextInputEditText"
                                android:hint="@string/description_required" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <androidx.constraintlayout.helper.widget.Flow
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="16dp"
                            app:constraint_referenced_ids="office_lo,client_lo,account_type_lo,account_lo,amount_lo,date_flow,description_lo"
                            app:flow_horizontalStyle="spread"
                            app:flow_maxElementsWrap="2"
                            app:flow_verticalGap="8dp"
                            app:flow_wrapMode="chain"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/divider" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/transfer" />
                    <!--android:onClick="@{(view) -> fragment.submit()}"-->
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>