<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.Mshirika.Client.OutlinedButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintWidth_percent">.48</item>
        <item name="android:layout_height">65dp</item>
    </style>

    <style name="Widget.Mshirika.ImageView.Round" parent="Widget.Mshirika.Shape">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.Mshirika.ImageView.Rounded" parent="Widget.Mshirika.Shape">
        <item name="cornerSize">20%</item>
    </style>

    <style name="Widget.Mshirika.SearchView" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="iconifiedByDefault">false</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="searchIcon">@null</item>
    </style>

    <style name="Widget.Mshirika.TextView.Style" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:padding">2dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">16dp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Widget.Mshirika.Transaction.CardView" parent="Widget.Material3.CardView.Outlined">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="Widget.Mshirika.Transition.CardView" parent="Widget.Material3.CardView.Outlined">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="Widget.Mshirika.TextInputEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
    </style>

    <style name="Widget.Mshirika.TextInputLayout.Date" parent="Widget.Mshirika.TextInputLayout.OutlinedBox">
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_baseline_calendar_month_24</item>
    </style>

    <style name="Widget.Mshirika.TextInputLayout.Dense.Date" parent="Widget.Mshirika.TextInputLayout.OutlinedBox.Dense">
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_baseline_calendar_month_24</item>
    </style>

    <style name="Widget.Mshirika.TextInputEditText.Date">
        <!--<item name="android:editable">false</item>-->
        <item name="android:inputType">date</item>
    </style>

    <style name="Widget.Mshirika.TextInputEditText.SingleLine">
        <item name="maxLines">1</item>
    </style>

    <style name="Widget.Mshirika.BottomSheetStyle" parent="Widget.Material3.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Mshirika.BottomSheet</item>
    </style>

    <style name="Widget.Mshirika.TextAutoComplete" parent="">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="Widget.Mshirika.TextInputLayout.FilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">20dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <style name="Widget.Mshirika.TextInputLayout.FilledBox.DropDown" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">20dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <style name="Widget.Mshirika.TextInputLayout.OutlinedBox" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Mshirika.MediumComponent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.Mshirika.TextInputLayout.OutlinedBox.Dense" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Mshirika.MediumComponent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.Mshirika.TextInputLayout.OutlinedBox.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Mshirika.MediumComponent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.Mshirika.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Mshirika.MediumComponent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.Mshirika.Shape" parent="">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearance.Mshirika.BottomSheet" parent="Widget.Mshirika.Shape">
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="ShapeAppearance.Mshirika.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">

    </style>
</resources>