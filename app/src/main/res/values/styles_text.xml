<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Mshirika" parent="TextAppearance.AppCompat">

    </style>

    <style name="TextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Toolbar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Item.Primary" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_textColor</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Item.Secondary" parent="">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/secondary_textColor</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MshirikaApp.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="MshirikaApp.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>